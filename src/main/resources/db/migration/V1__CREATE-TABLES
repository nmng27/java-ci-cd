CREATE TABLE TB_TRAFEGO
(
    ID_TRAFEGO NUMBER(7) PRIMARY KEY,
    HORA_TRAFEGO VARCHAR2(50) NOT NULL,
    VOLUME_TRAFEGO number(7) NOT NULL,
    SITUACAO_TRAFEGO CHAR(1) NOT NULL

)

CREATE TABLE TABLE TB_SEMAFORO
(
    ID_TRAFEGO NUMBER(7) PRIMARY KEY,
    COR_SEMAFORO VARCHAR2(100) NOT NULL,
    ID_TRAFEGO NUMBER(7) NOT NULL,
    CONSTRAINT FK_SEMAFORO_1 FOREIGN KEY(ID_TRAFEGO) REFERENCES TB_TRAFEGO(ID_TRAFEGO)
)

CREATE TABLE TB_ACIDENTE
(
    ID_ACIDENTE NUMBER(7) PRIMARY KEY,
    TIPO_ACIDENTE VARCHAR2(50) NOT NULL,
    GRAVIDADE_ACIDENTE VARCHAR2(50) NOT NULL,
     CONSTRAINT FK_ACIDENTE_1 FOREIGN KEY(ID_TRAFEGO) REFERENCES TB_TRAFEGO(ID_TRAFEGO))


CREATE TABLE TB_CLIMA
(ID_CLIMA NUMBER(7),
HORA_CLIMA VARCHAR2(100),
TIPO_CLIMA VARCHAR2(100),
IMPACTO_CLIMA VARCHAR2(100),
CONSTRAINT FK_CLIMA_1 FOREIGN KEY(ID_TRAFEGO) REFERENCES TB_TRAFEGO(ID_TRAFEGO)
)